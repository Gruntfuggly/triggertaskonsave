{
    "name": "trigger-task-on-save",
    "displayName": "Trigger Task on Save",
    "description": "Run a selected task when saving files",
    "version": "0.0.1",
    "publisher": "Gruntfuggly",
    "repository": "https: //github.com/Gruntfuggly/triggertaskonsave",
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "*"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Trigger Task on Save confiiguration",
            "properties": {
                "triggerTaskOnSave.on": {
                    "type": "boolean",
                    "description": "Automatically trigger tasks on save",
                    "default": true
                },
                "triggerTaskOnSave.extensions": {
                    "type": "object",
                    "description": "Tasks to associate with extensions, e.g. \"make\": [\"h\",\"cpp\"]",
                    "default": {
                        "build": [
                            "*"
                        ]
                    }
                }
            }
        }
    },
    "scripts": {
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "eslint": "^3.6.0",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    }
}